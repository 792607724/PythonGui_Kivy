<AnchorLayoutWidget>:
    padding:20
    spacing:20
    canvas:
        Color:
            rgba:[1,1,1,1]
        Rectangle:
            size:self.size
            pos:self.pos
    AnchorLayout:
        anchor_x:"left"
        anchor_y:"top"
        Button:
            text:"Button_Bro1"
            size_hint:1/3,1/3
            background_color:0,1,1,1
    AnchorLayout:
        anchor_x:"right"
        anchor_y:"bottom"
        Button:
            text:"Button_Bro2"
            size_hint:1/3,1/3
            background_color:0,1,0.5,1
