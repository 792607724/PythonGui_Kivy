<GridLayoutWidget>:
    #padding:20
    #spacing:20
    cols:3
    # 墙纸设置列宽
    #col_force_default:True
    #col_default_width:200
    # 设置列宽行高
    #cols_minimum:{0:200,1:200,2:200}
    #rows_minimum:{0:50,1:50,2:50}
    canvas:
        Color:
            rgba:[1,1,1,1]
            Rectangle:
                size:self.size
                pos:self.pos
    Button:
        text:"0"
        # 设置size_hint_x和y为None，即可给它指定默认大小
        size_hint_x:None
        size_hint_y:None
        width:"100px"
        height:"100px"
    Button:
        text:"1"
        size_hint_x:1/3
    GridLayout:
        size_hint_x:1/3
        #padding:20
        #spacing:20
        rows:2
        canvas:
            Color:
                rgba:[1,0,0.5,1]
                Rectangle:
                    size:self.size
                    pos:self.pos
        Button:
            text:"2"
            size_hint_y:0.5
        Button:
            text:"3"
            size_hint_y:0.5
